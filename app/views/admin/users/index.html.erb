<% content_for(:title, 'ユーザー一覧') %>
<div class="container">
<%= render 'search_form' %>
  <div class="row">
		<table class="table">
			<thead>
				<tr>
				<th scope="col">ID</th>
				<th scope="col">氏名</th>
				<th scope="col">権限</th>
				<th scope="col">作成日時</th>
				</tr>
			</thead>
				<tbody>
				<% @users.each do |user| %>
					<tr>
					<th scope="row"><%= user.id %></th>
					<td><%= link_to "#{user.decorate.full_name}", admin_user_path(user) %></td>
					<td><%= I18n.t("enums.user.role.#{user.role}") %></td>
					<td><%= user.created_at %></td>
					<td><%= link_to '編集', edit_admin_user_path(user), class: "btn btn-success" %></td>
					<td><%= link_to '削除', admin_user_path(user), method: :delete, class: "btn btn-danger", data: { confirm: '削除しますか?' } %></td>
					</tr>
				<% end %>
				</tbody>
		</table>
  </div>
</div>