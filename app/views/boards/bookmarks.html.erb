<% content_for(:title, 'ブックマーク一覧') %>

<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
        <!-- 検索フォーム -->
        <%= render 'search_form', url: bookmarks_boards_path %>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @bookmark_boards.any? %>
          <%= render @bookmark_boards %>
        <% else %>
          <p>ブックマーク中の掲示板がありません</p>
        <% end %>
      </div>
    </div>
      <%= paginate @bookmark_boards %>
  </div>
</div>
