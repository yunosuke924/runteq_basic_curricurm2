<div class="col-sm-12 col-lg-4 mb-3">
    <div id="board-id-<%= board.id %>">
        <div class="card">
            <%= image_tag board.board_image.url, class: "card-img-top", size: '300x200' %>
            <div class="card-body">
                <h4 class="card-title">
                <%= link_to "#{board.title}", board %>
                </h4>
                <% if current_user.own?(board) %>
                    <%= render 'boards/crud_menus', board: board %>
                <% else %>
                    <%= render 'bookmarks/bookmark_area', board: board %>
                <% end %>
                <ul class="list-inline">
                    <li class="list-inline-item"><i class="far fa-user"></i> <%= board.user.decorate.full_name %></li>
                    <li class="list-inline-item"><i class="far fa-calendar"></i><%= l board.created_at, format: :long %></li>
                </ul>
                <p class="card-text"><%= board.body %></p>
            </div>
            
        </div>
    </div>
</div>