<%= form_with(model: board, local: true) do |form| %>
  <%= render 'shared/error_message', object: form.object %>
  <div class="form-group">
    <%= form.label :title %><br/>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :body %><br/>
    <%= form.text_area :body, cols: "20", rows: "10", class: "form-control" %>
  </div>
  <div class="field">
    <%= form.label :board_image %><br/>
    <%= form.file_field :board_image, onchange: 'previewImage()', class: 'form-control mb-3', accept: 'image/*' %>
  </div>
  <div>
    <%= image_tag board.board_image.url, id: 'preview', size: '300x200' %>
  </div>
  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>