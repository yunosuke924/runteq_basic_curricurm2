<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>掲示板作成</h1>
      <%= form_with(model: @board, local: true) do |form| %> 
        <div class="form-group">
          <%= form.label :title %><br/>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :body %><br/>
          <%= form.text_area :body, cols: "20", rows: "10", class: "form-control" %>
        </div>
        <div class="actions">
          <%= form.submit (t '.register'), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>